doctype html
html(ng-app='VoltigeApp')
	head
		base(href="/")
		meta(name="viewport", content="width=device-width, initial-scale=1")
		title(ng-bind=" 'Voltige | ' + $root.page_title") Voltige
		link(rel='stylesheet', href='/vendor/bootstrap/dist/css/bootstrap.css')
		link(rel='stylesheet', href='/vendor/bootstrap/dist/css/bootstrap-theme.css')
		link(rel='stylesheet', href='/vendor/angular-bootstrap/ui-bootstrap-csp.css')
		link(rel='stylesheet', href='/stylesheets/style.css')
		link(rel='stylesheet', href='/stylesheets/spin.css')
		script(src='/vendor/jquery/dist/jquery.min.js')
		script(src='/vendor/jquery-ui/jquery-ui.min.js')
		script(src='/vendor/bootstrap/dist/js/bootstrap.min.js')
		script(src='/vendor/angular/angular.js')
		script(src='/vendor/angular-route/angular-route.min.js')
		script(src='/vendor/angular-bootstrap/ui-bootstrap-tpls.min.js')
		script(src='/vendor/angular-jwt/dist/angular-jwt.min.js')
		script(src='/vendor/ngstorage/ngStorage.min.js')
		script(src='/vendor/angular-sanitize/angular-sanitize.min.js')
		script(src='/vendor/angular-messages/angular-messages.min.js')
		script(src='/vendor/angular-file-upload/dist/angular-file-upload.min.js')
		script(src='/vendor/angular-animate/angular-animate.min.js')
		script(src='/vendor/ng-file-upload/ng-file-upload.min.js')
		script(src='/vendor/angular-flash-messages/angular-flash.js')
		script(src='/app.js')
		script(src='/controllers/controllers.js')
		script(src='/controllers/user_controllers.js')
		script(src='/controllers/show_controllers.js')
		script(src='/controllers/upload_controller.js')
		script(src='/controllers/code_controllers.js')
		script(src='/controllers/subscription_controllers.js')
		script(src='/controllers/category_base_controllers.js')
		script(src='/directives.js')
		script(src='/modules.js')
		link(href="https://fonts.googleapis.com/css?family=Arvo", rel="stylesheet")
	body
		div.row
			div.container
				h3 {{ Show.showno }} | {{ Show.organization }} | {{ Show.showcity }} | &nbsp;
					span(ng-bind="Show.from_dt | date:' dd.MM.yyyy - ' ")
					| -&nbsp;
					span(ng-bind="Show.to_dt | date: 'dd.MM.yyyy' ")
		div(class='navbar navbar-default')
			div.container-fluid
				ul(class='nav navbar-nav')
					li
						a(href='#/', translate) Home
					li.dropdown
						a(class="dropdown-toogle", data-toggle="dropdown", ng-click="$event.preventDefault()", href='#', translate) Programmierer
							ul.dropdown-menu
								li
									a(href='#/admin/codes', translate) Codes verwalten
								li
									a(href='#/admin/category_bases', translate) Basiskategorien verwalten
					li.dropdown
						a(class="dropdown-toogle", data-toggle="dropdown", ng-click="$event.preventDefault()", href='#', translate) Admin
							ul.dropdown-menu
								li
									a(href='#/admin/show_select', translate) Turnier auswählen
								li
									a(href='#/admin/longesub_all', translate) Ersatzlongenführer
								li
									a(href='#/admin/upload', translate) Daten einlesen
								li
									a(href='#/admin/users', translate) Benutzer verwalten 
								li
									a(href='#/admin/shows', translate) Turnier verwalten 
								li
									a(href='#/admin/codetexts', translate) Codetext verwalten 
					li
						a(href='#/admin/subscriptions/registration_office', translate) Meldestelle
				p.navbar-text
					span.glyphicon.glyphicon-refresh.gly-spin(id="loadergif",aria-hidden="true",style="display:none")
						
		div.container
			flash:messages {{ }}
			div(ng-view) Willkommen in der Voltige-App
		script(src='/vendor/angular-ui-sortable/sortable.min.js')
		
    
	
